# Application Configuration
NODE_ENV=development
PORT=3003

# JWT Configuration (must match Auth Service)
JWT_SECRET=your-super-secret-jwt-key-here

# Auth Service Integration
AUTH_SERVICE_URL=http://auth-service:3000
AUTH_HMAC_TIMEOUT_MS=5000
HMAC_TIMESTAMP_TOLERANCE_MS=300000

# Circuit Breaker Configuration
AUTH_CB_FAILURE_THRESHOLD=5
AUTH_CB_RECOVERY_MS=60000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ai_faq_platform
DB_POOL_MAX=10

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_INDEX_NAME=faq-platform

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
EMBEDDING_DIMENSIONS=768
OLLAMA_GENERATION_MODEL=llama3
OLLAMA_TIMEOUT_MS=60000

# RAG Configuration
RAG_TOP_K=5
RAG_MIN_SCORE=0.3
RAG_MAX_CONTEXT_TOKENS=3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=30

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_MS=500

# Logging
LOG_LEVEL=info