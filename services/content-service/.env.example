# Content Service Environment Example
NODE_ENV=development
PORT=3002
LOG_LEVEL=info

# ================= Database (Local) =================
# Either provide DATABASE_URL or discrete settings below
DATABASE_URL=
DB_HOST=postgres
DB_PORT=5432
DB_NAME=faq_platform
DB_USER=fce_user
DB_PASSWORD=SecurePass123
DB_POOL_SIZE=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# ================= Storage =================
# s3 or local. For local dev you can use MinIO with S3-compatible endpoint
STORAGE_TYPE=s3
AWS_REGION=us-east-1
AWS_S3_BUCKET=faq-documents
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
PRESIGNED_URL_EXPIRY=900

# ================= Queue =================
QUEUE_TYPE=kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=content-service
KAFKA_GROUP_ID=content-service-group

# ================= Files =================
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain,text/markdown
